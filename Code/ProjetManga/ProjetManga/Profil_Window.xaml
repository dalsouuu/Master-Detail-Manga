<Window x:Class="ProjetManga.Profil_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetManga"
        mc:Ignorable="d"
        Title="Profil" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image/>
        <!--Image de profil de l'utilisateur-->
        <StackPanel Grid.Column="1">
            <DockPanel>
                <TextBlock Text="Nom" Margin="0,0,10,0"/>
                <TextBox  DockPanel.Dock="Right" x:Name="nom_text" Width="70" MaxHeight="20" HorizontalAlignment="Left"/>

            </DockPanel>
            <TextBlock/> <!--Pour aérer-->
            <TextBlock/> <!--Pour aérer-->
            <DockPanel>
                <TextBlock Text="Âge" Margin="0,0,10,0"/>
                <TextBox x:Name="age" DockPanel.Dock="Right" Width="70" MaxHeight="20" HorizontalAlignment="Left"/>
            </DockPanel>
        </StackPanel>
        <WrapPanel Grid.Row="1" Grid.ColumnSpan="1"> <!--ColumnSpan permet de fusionner des colonnes, mais je n'y arrive pas-->
            <TextBlock Text="Inscrit le :" Margin="0,0,10,0"/>
            <TextBlock x:Name="dateInscription" Text="20/03/2021"/>
        </WrapPanel>
    </Grid>
</Window>
