<UserControl x:Class="ProjetManga.User_Control.AfficherManga"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetManga.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Image Grid.Row="0"  Source="{Binding Couverture}"   HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="280" MaxWidth="220"/>
            <TextBlock Grid.Row="1" Text="{Binding TitreAlternatif}" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Padding="10"/>
        </Grid>
    </Grid>
</UserControl>
