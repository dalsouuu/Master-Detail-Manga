<UserControl x:Class="ProjetManga.AffichageCollection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetManga"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="130" MaxHeight="250" MaxWidth="130">
    <!--UserControl pour afficher chaque élément de notre collection-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--<Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="120" VerticalAlignment="Center" Width="80"/>-->
        <Image Grid.Row="0"  x:Name="couverture_manga" Source="Image/couvertureSNK.jpg" MaxHeight="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" x:Name="titre_manga" Text="L'Attaque des titans" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Padding="10"/>
        

    </Grid>
</UserControl>
