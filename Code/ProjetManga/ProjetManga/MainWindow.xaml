<Window x:Class="ProjetManga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetManga"
        mc:Ignorable="d"
        Title="LMG" Height="450" Width="800">
    <Grid> <!-- Les couleurs c'est pour me reperer entre les differents layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0">

        </Image>
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#FF4497D1" >
            <TextBlock Text="Genres disponibles :"></TextBlock>
            <ListBox  Background="#FFD3EBFF" Height="209" >
                <!-- Dans une list box tous les elements sont clickable et il ya une scrollbar quand la fenetre est tres petite
                Faudra enlever les éléments de la liste à la fin quand on fera notre logique-->
                <ListBoxItem Name="Shonen" Content="Shonen" Height="30" Background="#FFC0E0FD" Width="100" Margin="0,10,0,0"/>
                <ListBoxItem Name="Seinen" Content="Seinen" Height="30" Background="#FFC0E0FD" Width="100" Margin="0,10,0,0"/>
                <ListBoxItem Name="Shojo" Content="Shõjo" Height="30" Background="#FFC0E0FD" Width="100" Margin="0,10,0,0"/>
                <ListBoxItem Name="Josei" Content="Josei" Height="30"  Background="#FFC0E0FD" Width="100"  Margin="0,10,0,0"/>

                <ListBoxItem Content="Genre au hasard" Height="30"  Background="#FF7FBFF7" Width="100"  Margin="0,10,0,0" VerticalAlignment="Bottom"/>
            </ListBox>
            <TextBlock Text="Chercher un manga par nom :" Margin="10,10,10,0" Height="26" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"></TextBlock>
            <TextBox Name="nom_rechercher" Text="Saisir..." Background="White" FontStyle="Italic" Height="25"></TextBox>
            <Button Name="rechercher_Button" Content="Rechercher" Height="24"></Button>

        </StackPanel>


        <Grid Grid.Row="0" Grid.Column="1" Background="#FF4497D1"><!-- J'ai utilisé bcp de grid mais c'est pratique -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.9*"/>
                <ColumnDefinition/>
                
            </Grid.ColumnDefinitions>

            <TextBlock Margin="10,10,0,0"> <!-- pour mettre du texte l'un en dessous de l'autre on peut mettre un stackpanel -->
                <!--J'ai mis un text bloc pour "information utilisateur" car ça ne s'affichait pas si je mettais d'autre text bloc-->
                <WrapPanel> <!--Permet de mettre des élements à la ligne et si plus de place va à la ligne en dessous -->
                    <Image Source="https://resize-elle.ladmedia.fr/rcrop/796,1024/img/var/plain_site/storage/images/deco/news-tendances2/habitudes-des-francais-avec-les-fleurs-3180028/69321394-1-fre-FR/Les-Francais-et-les-fleurs-decouvrez-vos-habitudes.jpg" MaxHeight="70" MaxWidth="100" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
                    <StackPanel>
                        <!--<TextBlock Text="Informations utilisateur :" Margin="10,0,10,10" />-->
                        <TextBlock Text="Pseudo " Margin="10,3,3,3"/>
                        <TextBlock Text="Date d'inscription" Margin="10,3,3,3"/>
                        <TextBlock Text="Âge" Margin="10,3,3,3"/> 
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Type" Margin="10,3,3,3"/>
                        <TextBlock Text="Genre(s) préféré(s)" Margin="10,3,3,3"/> 
                    </StackPanel>
                </WrapPanel>
            </TextBlock>

            <StackPanel Grid.Column="1" Background="#FF4497D1"><!-- Ici pareil je met des trucs pas forcement utiles, c'est pour se rendre compte -->
                <!-- Avec une tool bar on pourra mettre des elements : ajouter manger, supprimer etc -->
                <Button Name="fav_button" Content="Favoris ♥" Background="IndianRed" FontSize="16" FontFamily="Dubai" FontWeight="Normal">

                </Button>
                <CheckBox Name="mode_button" Content="Mode nuit" FontFamily="Dubai" FontSize="16"  Width="219"  />

                <!--Je pense que c'est mieux quand on clique sur paramètre qu'on puisse choisir modifier/deconnexion-->
                <Button Name="settings_button" Content="Paramètres" FontFamily="Dubai" FontWeight="Normal" FontSize="16" Background="#FFD1D1D1" Click="settings_button_Click"/>
                <!--<Button Content="Deconnexion" FontFamily="Dubai" FontWeight="Normal" FontSize="16" Background="LightCoral">
                    
                </Button>-->
            </StackPanel>
        </Grid>
        <ListView Grid.Column="1" Grid.Row="1"> <!--Pour l'affichage des données, une liste view c'est préférable-->
            <!--Contiendra la collection de manga par genre-->
        </ListView>



    </Grid>
</Window>
