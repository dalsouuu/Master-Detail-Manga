<Window x:Class="ProjetManga.Note"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetManga"
        mc:Ignorable="d"
        Title="Note" Height="220" Width="360" MaxHeight="220" MaxWidth="360">
    <Grid Background="#FFD5E0E8">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Image/L.png" Grid.ColumnSpan="2" Margin="125,36,-16,0" Grid.RowSpan="3" Grid.Column="1" MaxHeight="420" MaxWidth="280"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <WrapPanel Margin="0,0,0,10" >
                <TextBlock Text="Note sur 10 : " Margin="0,0,10,0"></TextBlock>
                <ComboBox Background="#FF7FBFF7"></ComboBox>
            </WrapPanel>
            <TextBlock Text="Avis : (300 caractères max)" Margin="0,0,0,5" ></TextBlock>
            <RichTextBox Height="30"></RichTextBox>
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Annuler" Grid.Column="0"></Button>

            <Button DockPanel.Dock="Right" Content="Valider" Grid.Column="2" Background="#FF7FBFF7"></Button>



        </Grid>


    </Grid>
</Window>
